<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Lists</title>
  <link rel="stylesheet" href="/css/lists.css">
</head>
<body>
    <div class="container">
  <header>
    <%- include("partials/header") %>
  </header>

  <main>
    <section class="lists-container">
      <h1>Your Task Lists</h1>

      <div class="button-container">
        <a href="/createList" class="btn primary">Create New List</a>
      </div>

      <% if (lists && lists.length > 0) { %>
        <ul class="task-lists">
          <% lists.forEach(list => { %>
            <li class="task-item">
              <a href="/viewTasks/<%= list.id %>">
                <h3><%= list.name %></h3>
                <p>Tasks: <%= list.tasks.length %></p>
                <p>Created At: <%= new Date(list.createdAt).toLocaleDateString() %></p>
              </a>
            </li>
          <% }); %>
        </ul>
      <% } else { %>
        <p>No lists available. Click "Create New List" to start.</p>
      <% } %>
    </section>
  </main>
  <%- include("partials/footer") %>
</div>
</body>
</html>
